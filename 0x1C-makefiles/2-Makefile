# Makefile for project

# The name of the executable
TARGET = school

# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files (substituting .c for .o in SRC)
OBJ = $(SRC:.c=.o)

# The 'all' rule for building the executable
all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(OBJ) -o $(TARGET)

# Clean rule for cleaning up
clean:
	rm -f $(TARGET)
